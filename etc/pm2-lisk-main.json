{
        "apps": [{
                "name": "lisk-main",
                "script": "./mainnet/app.js",
                "cwd": "./mainnet/",
                "pid_file": "./pids/lisk-main.pid",
                "out_file": "./logs/lisk-main.log",
                "error_file": "./logs/lisk-main.err",
                "log_date_format": "YYYY-MM-DD HH:mm:ss SSS",
                "watch": false,
                "kill_timeout" : 10000,
                "max_memory_restart": "1024M",
                "node_args": "--max_old_space_size=1024"
        }]
}
